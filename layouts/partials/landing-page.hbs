 <!--Custom javascript-->
<script>
	$(document).ready(function(){
		//load the particle system,
		//connectedBlueDots is defined in config file(blue-connected.json)
		particlesJS('connectedParticles',connectedBlueDots);
		
		
		//event handler for the contact form submission
		$("#contactMe").click(function(){
			
			var senderName=$('#senderName').val();
			var email=$('#email').val();
			var message=$('#message').val();
			$.post('/contact',{'senderName':senderName,'email':email,'message':message},function(result){
				if(result=='true'){
					//success
					Materialize.toast('{{__ 'contactSuccess'}}', 4000) // 4000 is the duration of the toast
					$('#senderName').val('');
					$('#email').val('');
					$('#message').val('');							
				}else{
					//failure
					Materialize.toast('{{__ 'contactFailure'}}', 4000) // 4000 is the duration of the toast
				}
			});
		});
	});

</script>
