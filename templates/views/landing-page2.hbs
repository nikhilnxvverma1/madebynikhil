<script src="https://npmcdn.com/masonry-layout@4.1/dist/masonry.pkgd.min.js"></script>
<script>
	$(document).ready(function(){
		//load the particle system,
		//connectedBlueDots is defined in config file(blue-connected.json)
		particlesJS('connectedParticles',connectedBlueDots);

        $(".button-collapse").sideNav();
        $('.dropdown-button').dropdown({hover:false});
		
        var msnry = new Masonry( '.grid', {
            // options
			itemSelector:".grid-item",
//			columnWidth:".grid-sizer",
//			percentPosition:true
        });
        $("#viewPortfolio").click(function() {
            $('html, body').animate({
                scrollTop: $("#portfolio").offset().top
            }, 1000);
        });
	});
	
	function showProjectDetail(element){
		var overlayTeaserDiv=element.parentElement;
		$(overlayTeaserDiv).animate({height:"100%"},200);
		$(overlayTeaserDiv).find('.show-detail').css('display',"none");
        $(overlayTeaserDiv).find('.project-title').css('display',"none");
        $(overlayTeaserDiv).find('.project-brief').css('display',"none");
        $(overlayTeaserDiv).find('.project-detail').css('display',"block");
        $(overlayTeaserDiv).find('.hide-detail').css('display',"block");
	}
	
	function hideProjectDetail(element){
        var overlayTeaserDiv=element.parentElement;
        $(overlayTeaserDiv).animate({height:"30%"},200);
        $(overlayTeaserDiv).find('.show-detail').css('display',"block");
        $(overlayTeaserDiv).find('.project-title').css('display',"block");
        $(overlayTeaserDiv).find('.project-brief').css('display',"block");
        $(overlayTeaserDiv).find('.project-detail').css('display',"none");
        $(overlayTeaserDiv).find('.hide-detail').css('display',"none");
	}

</script>

